# Laravel React Boilerplate - Environment Variables

## Backend Environment Variables (.env)

# Application
APP_NAME="Laravel React Boilerplate"
APP_ENV=local
APP_KEY=base64:your-app-key-here
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel_react_boilerplate
DB_USERNAME=root
DB_PASSWORD=

# Laravel Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_DRIVER=file
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

## Frontend Environment Variables (.env)

# API Configuration
VITE_API_URL=http://localhost:8000/api/v1
VITE_APP_NAME="Laravel React Boilerplate"
VITE_APP_ENV=development

# Optional: Authentication
VITE_AUTH_GUARD=sanctum
VITE_PASSWORD_RESET_URL=http://localhost:3000/reset-password
VITE_EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email
